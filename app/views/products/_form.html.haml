= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :picture_uri
    = f.text_field :picture_uri
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :price
    = f.text_field :price
  .actions
    = f.submit 'Save'
