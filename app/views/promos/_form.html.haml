= form_for @promo do |f|
  - if @promo.errors.any?
    #error_explanation
      %h2= "#{pluralize(@promo.errors.count, "error")} prohibited this promo from being saved:"
      %ul
        - @promo.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :available
    = f.number_field :available
  .field
    = f.label :expires
    = f.datetime_select :expires
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
