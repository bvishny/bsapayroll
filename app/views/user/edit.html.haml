- if request.post?
  %strong{:class => ["notice", ((@user.errors.empty?) ? "success" : "error")]}=((@user.errors.empty?) ? "Profile updated successfully" : @user.errors.first[0].to_s.capitalize + " " + @user.errors.first[1].to_s)
.form-box
  %form{:method => "post", :action=>"/user/edit"}
    %input{:type => 'hidden', :name => 'authenticity_token', :value => form_authenticity_token}
    %p
      %label="Password:"
      %input{:name=>"user_profile[password]", :type=>"password", :size=>40}
    %p
      %label="Confirm Password:"
      %input{:name=>"user_profile[password_confirmation]", :type=>"password", :size=>40}
    %p
      %button{:type=>"submit"}="Submit"